<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >
    
    <TextView
            android:id="@+id/textview_nocategoriesadded"
            style="@style/commonH1TextViewStyle"
            android:text="@string/text_menuitems_nocategoriesadded"
            android:layout_weight="0" />

    <ExpandableListView
        android:id="@+id/expandableListView_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:groupIndicator="@drawable/menu_expandablelist" >
    </ExpandableListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        
        <TextView
            android:id="@+id/btn_addcategory"
            style="@style/commonButttonStyle"
            android:text="@string/text_menuitems_addcategory" 
            android:layout_weight="1"/>
        
        <TextView
            android:id="@+id/btn_addmenuitem"
            style="@style/commonButttonStyle"
            android:text="@string/text_menuitems_additem" 
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
