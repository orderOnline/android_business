<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview_menu_details"
        style="@style/H1TextViewStyle"
        android:text="@string/text_menudetails" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/items_horizontal_margin"
        android:layout_marginRight="@dimen/items_horizontal_margin"
        android:background="#d8d9d8" />
    
    <TextView
        android:id="@+id/btn_addcategory"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:text="@string/text_menuitems_addcategory" />

    <ExpandableListView
        android:id="@+id/expandableListView_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:groupIndicator="@drawable/menu_expandablelist" >
    </ExpandableListView>

</LinearLayout>