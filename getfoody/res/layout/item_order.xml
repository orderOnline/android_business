<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textview_offer_timer"
        style="@style/H1TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableTop="@drawable/ic_clock"
        android:gravity="bottom|center_horizontal"
        android:text="@string/text_dummytext" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_offer_address"
            style="@style/H1TextViewValueStyle"
            android:drawableLeft="@drawable/order_location"
            android:maxLines="2"
            android:text="@string/text_dummytext" />

        <TextView
            android:id="@+id/textview_offer_phonenumber"
            style="@style/H1TextViewValueStyle"
            android:drawableLeft="@drawable/order_call"
            android:text="@string/text_dummytext" />

        <TextView
            android:id="@+id/textview_offer_acceptance_status"
            style="@style/H1TextViewValueStyle"
            android:text="@string/text_dummytext" />
    </LinearLayout>

</LinearLayout>